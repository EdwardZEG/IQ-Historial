<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historial de Operaciones - IQ Option</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">

    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        .main-container {
            background: rgba(255, 255, 255, 0.98);
            min-height: 100vh;
            width: 100%;
            margin: 0;
            padding: 0;
        }

        .iq-header {
            background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
            color: white;
            padding: 2.5rem 0;
            position: relative;
            overflow: hidden;
        }

        .iq-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="3" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="80" r="2" fill="rgba(255,255,255,0.1)"/></svg>');
            animation: floatHeader 8s ease-in-out infinite;
        }

        @keyframes floatHeader {

            0%,
            100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-15px) rotate(180deg);
            }
        }

        .balance-card {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 16px;
            transition: all 0.3s ease;
        }

        .balance-card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.3);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

        .account-demo {
            background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
        }

        .account-real {
            background: linear-gradient(135deg, #FF5722 0%, #D32F2F 100%);
        }

        .stats-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
            height: 100%;
        }

        .stats-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            background: white;
        }

        .filter-section {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            padding: 2rem;
            margin: 2rem 0;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .form-control,
        .form-select {
            border-radius: 12px;
            border: 2px solid rgba(0, 0, 0, 0.1);
            padding: 12px 16px;
            font-weight: 500;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.9);
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 20px rgba(76, 175, 80, 0.2);
            background: white;
            transform: translateY(-2px);
        }

        .btn {
            border-radius: 12px;
            font-weight: 600;
            padding: 12px 24px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.5s;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        .btn-primary {
            background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
            border: none;
        }

        .btn-outline-primary {
            border: 2px solid #4CAF50;
            color: #4CAF50;
            background: transparent;
        }

        .btn-outline-primary:hover {
            background: #4CAF50;
            border-color: #4CAF50;
            color: white;
        }

        .btn-success {
            background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
            border: none;
        }

        .btn-outline-success {
            border: 2px solid #4CAF50;
            color: #4CAF50;
            background: transparent;
        }

        .btn-outline-success:hover {
            background: #4CAF50;
            border-color: #4CAF50;
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, #FF5722 0%, #D32F2F 100%);
            border: none;
        }

        .btn-outline-danger {
            border: 2px solid #FF5722;
            color: #FF5722;
            background: transparent;
        }

        .btn-outline-danger:hover {
            background: #FF5722;
            border-color: #FF5722;
            color: white;
        }

        .btn-info {
            background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
            border: none;
        }

        .btn-outline-info {
            border: 2px solid #2196F3;
            color: #2196F3;
            background: transparent;
        }

        .btn-outline-info:hover {
            background: #2196F3;
            border-color: #2196F3;
            color: white;
        }

        .btn-secondary {
            background: linear-gradient(135deg, #9E9E9E 0%, #757575 100%);
            border: none;
        }

        .btn-outline-secondary {
            border: 2px solid #9E9E9E;
            color: #9E9E9E;
            background: transparent;
        }

        .btn-outline-secondary:hover {
            background: #9E9E9E;
            border-color: #9E9E9E;
            color: white;
        }

        .table-container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            margin: 2rem 0;
        }

        .operation-row {
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
        }

        .operation-row:hover {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-left-color: #4CAF50;
            transform: translateX(5px);
        }

        .profit-positive {
            color: #4CAF50;
            font-weight: 700;
        }

        .profit-negative {
            color: #f44336;
            font-weight: 700;
        }

        .badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 12px;
        }

        .pagination {
            background: white;
            border-radius: 16px;
            padding: 1rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .page-link {
            border-radius: 10px;
            margin: 0 3px;
            border: 2px solid transparent;
            padding: 10px 15px;
            font-weight: 600;
            transition: all 0.3s ease;
            color: #4CAF50;
        }

        .page-item.active .page-link {
            background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
            border-color: #4CAF50;
            color: white;
        }

        .page-link:hover {
            background: #f8f9fa;
            border-color: #4CAF50;
            color: #4CAF50;
            transform: translateY(-2px);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .main-container {
                margin: 0;
                border-radius: 0;
                min-height: 100vh;
            }

            .iq-header {
                padding: 1.5rem 0;
            }

            .filter-section {
                padding: 1.5rem;
                margin: 1.5rem 1rem;
                border-radius: 12px;
            }

            .stats-card {
                margin-bottom: 1rem;
            }

            .btn-group {
                display: flex;
                flex-direction: column;
                gap: 0.5rem;
            }

            .btn-group .btn {
                width: 100%;
                margin: 0;
            }

            .table-container {
                margin: 1rem;
                border-radius: 12px;
                overflow-x: auto;
            }

            .table-container .card-header {
                padding: 1rem;
            }

            .table-container .card-header .row {
                display: none;
            }

            .table td {
                display: block;
                width: 100%;
                border: none;
                padding: 0.5rem 1rem;
                position: relative;
            }

            .table td:before {
                content: attr(data-label) ": ";
                font-weight: bold;
                display: inline-block;
                width: 100px;
                color: #6c757d;
            }

            .operation-row {
                display: block;
                border: 1px solid #dee2e6;
                margin-bottom: 1rem;
                border-radius: 8px;
                background: white;
            }

            .operation-row:hover {
                transform: none;
                border-left-color: #4CAF50;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            }
        }

        @media (max-width: 576px) {
            .container-fluid {
                padding: 1rem;
            }

            .balance-card {
                margin-top: 1rem;
            }

            .filter-section .col-md-3,
            .filter-section .col-md-2 {
                width: 100%;
                margin-bottom: 1rem;
            }
        }
    </style>
</head>

<body>
    <div class="main-container">
        <!-- Header mejorado con la lógica original -->
        <div class="iq-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="display-5 mb-3" style="position: relative; z-index: 2;">
                            <i class="fas fa-chart-line me-3"></i>
                            Historial de Operaciones
                        </h1>
                        <p class="lead mb-0" style="position: relative; z-index: 2; opacity: 0.9;">
                            Panel de Control de Operaciones
                        </p>
                    </div>
                    <div class="col-md-4 text-md-end" style="position: relative; z-index: 2;">
                        <div
                            class="balance-card p-3 <%= accountType === 'PRACTICE' ? 'account-demo' : 'account-real' %>">
                            <div class="text-center">
                                <small class="d-block opacity-75">Tipo de cuenta</small>
                                <h5 class="mb-1">
                                    <%= accountType==='PRACTICE' ? 'De práctica' : 'Real' %>
                                </h5>
                                <h4 class="mb-0">$<%= (balance || 0).toFixed(2) %>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid px-4 py-4">
            <!-- Selector de Cuenta -->
            <div class="row mb-4">
                <div class="col-md-12 d-flex justify-content-between align-items-center">
                    <div class="btn-group" role="group">
                        <a href="/historial?account=PRACTICE"
                            class="btn <%= accountType === 'PRACTICE' ? 'btn-success' : 'btn-outline-success' %>">
                            <i class="fas fa-graduation-cap me-2"></i>Cuenta Demo
                        </a>
                        <a href="/historial?account=REAL"
                            class="btn <%= accountType === 'REAL' ? 'btn-danger' : 'btn-outline-danger' %>">
                            <i class="fas fa-dollar-sign me-2"></i>Cuenta Real
                        </a>
                    </div>

                    <!-- Botón para cambiar a versión móvil -->
                    <div class="btn-group">
                        <a href="/historial-mobile?account=<%= accountType %>" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-mobile-alt me-2"></i>Versión Móvil
                        </a>
                    </div>
                </div>
            </div>

            <!-- Filtros -->
            <div class="filter-section">
                <h4 class="mb-4">
                    <i class="fas fa-filter me-2 text-primary"></i>
                    Filtros de Búsqueda
                </h4>
                <form method="POST" action="/filtrar">
                    <div class="row align-items-end">
                        <div class="col-md-3">
                            <label class="form-label fw-600">
                                <i class="fas fa-calendar-alt me-2"></i>Fecha de inicio
                            </label>
                            <input type="date" name="fecha_inicio" class="form-control"
                                value="<%= filtro && filtro.fecha_inicio ? filtro.fecha_inicio : '' %>">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-600">
                                <i class="fas fa-calendar-check me-2"></i>Fecha de fin
                            </label>
                            <input type="date" name="fecha_fin" class="form-control"
                                value="<%= filtro && filtro.fecha_fin ? filtro.fecha_fin : '' %>">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-600">
                                <i class="fas fa-chart-pie me-2"></i>Instrumento
                            </label>
                            <select name="instrumento" class="form-select">
                                <option value="all" <%=instrumento==='all' ? 'selected' : '' %>>Todas</option>
                                <option value="digital" <%=instrumento==='digital' ? 'selected' : '' %>>Digital</option>
                                <option value="binary" <%=instrumento==='binary' ? 'selected' : '' %>>Binarias</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-600">
                                <i class="fas fa-trophy me-2"></i>Resultado
                            </label>
                            <select name="resultado" class="form-select">
                                <option value="">Todos</option>
                                <option value="win" <%=(typeof resultado !=='undefined' && resultado==='win' )
                                    ? 'selected' : '' %>>Ganancias</option>
                                <option value="loss" <%=(typeof resultado !=='undefined' && resultado==='loss' )
                                    ? 'selected' : '' %>>Pérdidas</option>
                            </select>
                        </div>
                        <div class="col-md-1">
                            <input type="hidden" name="account" value="<%= accountType %>">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search me-2"></i>Filtrar
                            </button>
                        </div>
                        <div class="col-md-1">
                            <a href="/historial?account=<%= accountType %>" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-times me-2"></i>Limpiar
                            </a>
                        </div>
                    </div>
                    <% if (filtro && (filtro.fecha_inicio || filtro.fecha_fin)) { %>
                        <div class="mt-3">
                            <div class="alert alert-info mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Periodo seleccionado:</strong>
                                <%= filtro.fecha_inicio || 'Inicio' %> — <%= filtro.fecha_fin || 'Fin' %>
                            </div>
                        </div>
                        <% } %>
                </form>
            </div>

            <!-- Estadísticas -->
            <% if (estadisticas && estadisticas.total_operaciones> 0) { %>
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="mb-3">
                            <i class="fas fa-chart-bar me-2 text-primary"></i>
                            Datos para el periodo seleccionado
                        </h5>
                        <% if (accountType==='REAL' ) { %>
                            <p class="text-muted small">Solo puedes descargar datos relativos a tu cuenta real y que
                                cubran como máximo 3 meses.</p>
                            <% } %>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="stats-card p-4 text-center">
                            <div class="mb-2">
                                <i class="fas fa-dollar-sign text-warning fa-2x"></i>
                            </div>
                            <h6 class="text-muted mb-1">Inversión total</h6>
                            <h4 class="mb-0 text-primary">$<%= estadisticas.inversion_total.toFixed(2) %>
                            </h4>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card p-4 text-center">
                            <div class="mb-2">
                                <i class="fas fa-piggy-bank text-info fa-2x"></i>
                            </div>
                            <h6 class="text-muted mb-1">Capital total</h6>
                            <h4 class="mb-0 text-info">$<%= estadisticas.capital_total.toFixed(2) %>
                            </h4>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card p-4 text-center">
                            <div class="mb-2">
                                <i
                                    class="fas fa-chart-line <%= estadisticas.beneficio_bruto_total >= 0 ? 'text-success' : 'text-danger' %> fa-2x"></i>
                            </div>
                            <h6 class="text-muted mb-1">Beneficio bruto total</h6>
                            <h4
                                class="mb-0 <%= estadisticas.beneficio_bruto_total >= 0 ? 'profit-positive' : 'profit-negative' %>">
                                $<%= estadisticas.beneficio_bruto_total.toFixed(2) %>
                            </h4>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card p-4 text-center">
                            <div class="mb-2">
                                <i class="fas fa-exchange-alt text-secondary fa-2x"></i>
                            </div>
                            <h6 class="text-muted mb-1">Operaciones</h6>
                            <div class="d-flex justify-content-between">
                                <small class="profit-positive">
                                    <i class="fas fa-check-circle me-1"></i>
                                    <%= estadisticas.operaciones_ganadoras %>
                                </small>
                                <small class="profit-negative">
                                    <i class="fas fa-times-circle me-1"></i>
                                    <%= estadisticas.operaciones_perdedoras %>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                    <!-- Mostrar errores -->
                    <% if (typeof error !=='undefined' && error) { %>
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Error:</strong>
                            <%= error %>
                        </div>
                        <% } %>

                            <!-- Selector de cantidad por página -->
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center">
                                        <label class="form-label me-3 mb-0">
                                            <i class="fas fa-list me-2"></i>Mostrar:
                                        </label>
                                        <select class="form-select form-select-sm" style="width: auto;"
                                            onchange="changeItemsPerPage(this.value)">
                                            <option value="25" <%=typeof perPage !=='undefined' && perPage==25
                                                ? 'selected' : '' %>>25</option>
                                            <option value="50" <%=typeof perPage !=='undefined' && perPage==50
                                                ? 'selected' : '' %>>50</option>
                                            <option value="75" <%=typeof perPage !=='undefined' && perPage==75
                                                ? 'selected' : '' %>>75</option>
                                            <option value="100" <%=typeof perPage !=='undefined' && perPage==100
                                                ? 'selected' : '' %>>100</option>
                                        </select>
                                        <span class="ms-2 text-muted">operaciones por página</span>
                                    </div>
                                </div>
                                <div class="col-md-6 text-end">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Total: <%= typeof pagination !=='undefined' && pagination ?
                                            pagination.totalItems || 0 : 0 %> operaciones
                                    </small>
                                </div>
                            </div>

                            <!-- Tabla de operaciones estilo IQ Option con diseño moderno -->
                            <div class="table-container">
                                <div class="card-header bg-primary text-white p-3">
                                    <div class="row align-items-center">
                                        <div class="col-md-3">
                                            <strong>
                                                <i class="fas fa-clock me-2"></i>
                                                Fecha/Hora
                                            </strong>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <strong>
                                                <i class="fas fa-chart-candlestick me-1"></i>
                                                Activo
                                            </strong>
                                        </div>
                                        <div class="col-md-1 text-center">
                                            <strong>
                                                <i class="fas fa-arrow-up me-1"></i>
                                                Dir.
                                            </strong>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <strong>
                                                <i class="fas fa-dollar-sign me-1"></i>
                                                Inversión
                                            </strong>
                                        </div>
                                        <div class="col-md-1 text-center">
                                            <strong>
                                                <i class="fas fa-trophy me-1"></i>
                                                Result.
                                            </strong>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <strong>
                                                <i class="fas fa-calculator me-1"></i>
                                                P/G - Capital
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <table class="table table-sm mb-0 w-100">
                                        <tbody>
                                            <% if (historial.length===0) { %>
                                                <tr>
                                                    <td colspan="6" class="text-center py-5 text-muted">
                                                        <div class="py-4">
                                                            <i class="fas fa-inbox fa-3x mb-3 opacity-25"></i>
                                                            <h5>No hay operaciones para mostrar en este periodo.</h5>
                                                            <p class="mb-0">Intenta ajustar el rango de fechas o el tipo
                                                                de instrumento.</p>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% } %>
                                                    <% historial.forEach(op=> { %>
                                                        <tr class="operation-row">
                                                            <td class="py-3 col-md-3" data-label="Fecha/Hora">
                                                                <div>
                                                                    <strong class="text-dark">
                                                                        <i
                                                                            class="fas fa-calendar-alt me-2 text-primary"></i>
                                                                        <%= op.tiempo_compra %>
                                                                    </strong><br>
                                                                    <small class="text-muted">
                                                                        <i class="fas fa-clock me-1"></i>
                                                                        <%= op.tiempo_cierre %>
                                                                    </small>
                                                                </div>
                                                            </td>
                                                            <td class="text-center py-3 col-md-2" data-label="Activo">
                                                                <span class="badge bg-secondary fs-6">
                                                                    <i class="fas fa-chart-line me-1"></i>
                                                                    <%= (op.activo || op.instrument || 'N/A'
                                                                        ).replace('-op', '' ) %>
                                                                </span>
                                                            </td>
                                                            <td class="text-center py-3 col-md-1"
                                                                data-label="Dirección">
                                                                <% if (op.direction==='call' || op.direccion==='call' )
                                                                    { %>
                                                                    <span class="badge bg-success">
                                                                        <i class="fas fa-arrow-up me-1"></i>CALL
                                                                    </span>
                                                                    <% } else { %>
                                                                        <span class="badge bg-danger">
                                                                            <i class="fas fa-arrow-down me-1"></i>PUT
                                                                        </span>
                                                                        <% } %>
                                                            </td>
                                                            <td class="text-center py-3 col-md-2"
                                                                data-label="Inversión">
                                                                <strong class="text-dark fs-6">
                                                                    <i class="fas fa-dollar-sign text-warning me-1"></i>
                                                                    $<%= (op.inversion || op.amount || 0).toFixed(2) %>
                                                                </strong>
                                                            </td>
                                                            <td class="text-center py-3 col-md-1"
                                                                data-label="Resultado">
                                                                <% if (op.ganancia_bruta>= 0) { %>
                                                                    <span class="badge bg-success fs-6">
                                                                        <i class="fas fa-check-circle me-1"></i>WIN
                                                                    </span>
                                                                    <% } else { %>
                                                                        <span class="badge bg-danger fs-6">
                                                                            <i class="fas fa-times-circle me-1"></i>LOSS
                                                                        </span>
                                                                        <% } %>
                                                            </td>
                                                            <td class="text-center py-3 col-md-2"
                                                                data-label="P/G - Capital">
                                                                <div
                                                                    class="<%= (op.ganancia_bruta || op.profit || 0) >= 0 ? 'profit-positive' : 'profit-negative' %>">
                                                                    <strong class="fs-6">
                                                                        <i
                                                                            class="fas fa-<%= (op.ganancia_bruta || op.profit || 0) >= 0 ? 'arrow-up' : 'arrow-down' %> me-1"></i>
                                                                        <%= (op.ganancia_bruta || op.profit || 0)>= 0 ?
                                                                            '+' : '' %>$<%= (op.ganancia_bruta ||
                                                                                op.profit || 0).toFixed(2) %>
                                                                    </strong><br>
                                                                    <small class="text-muted">
                                                                        <i class="fas fa-percentage me-1"></i>
                                                                        <%= (op.porcentaje || 0).toFixed(2) %>%
                                                                    </small>
                                                                    <div class="mt-1">
                                                                        <small class="text-info">
                                                                            <i class="fas fa-piggy-bank me-1"></i>
                                                                            Capital: $<%= (op.capital || 0).toFixed(2)
                                                                                %>
                                                                        </small>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Paginación -->
                            <% if (typeof pagination !=='undefined' && pagination && pagination.totalPages> 1) { %>
                                <div class="row mt-4">
                                    <div class="col-12 d-flex justify-content-center">
                                        <nav aria-label="Navegación de páginas">
                                            <ul class="pagination">
                                                <% if (pagination.hasPrev) { %>
                                                    <li class="page-item">
                                                        <a class="page-link"
                                                            href="/historial?account=<%= accountType %>&page=<%= pagination.prevPage %><% if (filtro && filtro.fecha_inicio) { %>&fecha_inicio=<%= filtro.fecha_inicio %><% } %><% if (filtro && filtro.fecha_fin) { %>&fecha_fin=<%= filtro.fecha_fin %><% } %><% if (filtro && filtro.instrumento) { %>&instrumento=<%= filtro.instrumento %><% } %>">
                                                            <i class="fas fa-chevron-left me-1"></i>Anterior
                                                        </a>
                                                    </li>
                                                    <% } %>

                                                        <% for (let i=Math.max(1, pagination.currentPage - 2); i
                                                            <=Math.min(pagination.totalPages, pagination.currentPage +
                                                            2); i++) { %>
                                                            <li
                                                                class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                                                <% if (i===pagination.currentPage) { %>
                                                                    <span class="page-link">
                                                                        <%= i %>
                                                                    </span>
                                                                    <% } else { %>
                                                                        <a class="page-link"
                                                                            href="/historial?account=<%= accountType %>&page=<%= i %><% if (filtro && filtro.fecha_inicio) { %>&fecha_inicio=<%= filtro.fecha_inicio %><% } %><% if (filtro && filtro.fecha_fin) { %>&fecha_fin=<%= filtro.fecha_fin %><% } %><% if (filtro && filtro.instrumento) { %>&instrumento=<%= filtro.instrumento %><% } %>">
                                                                            <%= i %>
                                                                        </a>
                                                                        <% } %>
                                                            </li>
                                                            <% } %>

                                                                <% if (pagination.hasNext) { %>
                                                                    <li class="page-item">
                                                                        <a class="page-link"
                                                                            href="/historial?account=<%= accountType %>&page=<%= pagination.nextPage %><% if (filtro && filtro.fecha_inicio) { %>&fecha_inicio=<%= filtro.fecha_inicio %><% } %><% if (filtro && filtro.fecha_fin) { %>&fecha_fin=<%= filtro.fecha_fin %><% } %><% if (filtro && filtro.instrumento) { %>&instrumento=<%= filtro.instrumento %><% } %>">
                                                                            Siguiente<i
                                                                                class="fas fa-chevron-right ms-1"></i>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>
                                            </ul>
                                        </nav>
                                    </div>
                                    <div class="col-12 text-center mt-2">
                                        <small class="text-muted">
                                            Página <%= pagination.currentPage %> de <%= pagination.totalPages %>
                                                    (Mostrando <%= historial.length %> de <%= pagination.totalItems
                                                            || 'N/A' %> operaciones)
                                        </small>
                                    </div>
                                </div>
                                <% } %>

                                    <!-- Footer -->
                                    <div class="text-center mt-4 mb-5">
                                        <a href="/" class="btn btn-outline-danger btn-lg">
                                            <i class="fas fa-sign-out-alt me-2"></i>
                                            Cerrar Sesión
                                        </a>
                                    </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Función para cambiar cantidad de operaciones por página
        function changeItemsPerPage(perPage) {
            const urlParams = new URLSearchParams(window.location.search);
            urlParams.set('perPage', perPage);
            urlParams.set('page', '1'); // Reset to first page
            window.location.search = urlParams.toString();
        }

        // Inicializar tooltips y efectos
        document.addEventListener('DOMContentLoaded', function () {
            // Efectos de hover para las filas de la tabla
            const rows = document.querySelectorAll('.operation-row');
            rows.forEach(row => {
                row.addEventListener('mouseenter', function () {
                    this.style.boxShadow = '0 4px 15px rgba(76, 175, 80, 0.2)';
                });
                row.addEventListener('mouseleave', function () {
                    this.style.boxShadow = 'none';
                });
            });

            // Validación de fechas en filtros
            const fechaInicio = document.querySelector('input[name="fecha_inicio"]');
            const fechaFin = document.querySelector('input[name="fecha_fin"]');

            if (fechaInicio && fechaFin) {
                fechaInicio.addEventListener('change', function () {
                    fechaFin.min = this.value;
                });

                fechaFin.addEventListener('change', function () {
                    fechaInicio.max = this.value;
                });
            }
        });
    </script>
</body>

</html>